<UserControl x:Class="TrainSchedule.TrainControls.StationItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrainSchedule.TrainControls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Margin="5,2,5,2" CornerRadius="3" BorderThickness="0" BorderBrush="#FFF11414" Background="#FF00AEFF">
            <TextBlock Grid.Column="0" Margin="5,0,5,0" HorizontalAlignment="Center" Text="{Binding name}"></TextBlock>
        </Border>
        <TextBlock Grid.Column="1" Text="{Binding cnName}"></TextBlock>
    </Grid>
</UserControl>
